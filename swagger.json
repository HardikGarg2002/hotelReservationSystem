{
    "openapi": "3.0.0",
    "info": {
      "title": "Hotel Booking API",
      "version": "1.0.0",
      "description": "API documentation for Hotel Booking System"
    },
    "servers": [
      {
        "url": "https://hotelreservationsystem.onrender.com/"
      }
    ],
    "tags": [
      {
        "name": "Hotel",
        "description": "API for Hotels in the system"
      },
      {
        "name": "Auth",
        "description": "API for authorization in the system"
      },
      {
        "name": "Booking",
        "description": "API for Booking the hotel"
      }
    ],
    "paths": {
      "/api-docs": {
        "post": {
          "summary": "Create API documentation",
          "tags": [
            "Auth"
          ],
          "responses": {
            "200": {
              "description": "API documentation created successfully"
            }
          }
        }
      },
      "/auth/register": {
        "post": {
          "summary": "User registration",
          "tags": [
            "Auth"
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserRegistration"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "User registered successfully"
            }
          }
        }
      },
      "/auth/verifyemail": {
        "post": {
          "summary": "Verify user's email",
          "tags": [
            "Auth"
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VerifyEmail"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Email verified successfully"
            }
          }
        }
      },
      "/auth/login": {
        "post": {
          "summary": "User login",
          "tags": [
            "Auth"
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserLogin"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "User logged in successfully"
            }
          }
        }
      },
      "/auth/logout": {
        "get": {
          "summary": "User logout",
          "tags": [
            "Auth"
          ],
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "User logged out successfully"
            }
          }
        }
      },
      "/hotels": {
        "get": {
          "summary": "Get all hotels",
          "tags": [
            "Hotel"
          ],
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "Successfully retrieved hotels"
            }
          }
        },
        "post": {
          "summary": "Add a new hotel",
          "tags": [
            "Hotel"
          ],
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NewHotel"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Hotel added successfully"
            }
          }
        }
      },
      "/hotels/{hotelId}": {
        "put": {
          "summary": "Update a hotel",
          "tags": [
            "Hotel"
          ],
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "hotelId",
              "in": "path",
              "description": "ID of the hotel to update",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdateHotel"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Hotel updated successfully"
            }
          }
        },
        "delete": {
          "summary": "Delete a hotel",
          "tags": [
            "Hotel"
          ],
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "hotelId",
              "in": "path",
              "description": "ID of the hotel to delete",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Hotel deleted successfully"
            }
          }
        }
      },
      "/hotels/{hotelId}/feedback": {
        "post": {
          "summary": "Give feedback for a hotel",
          "tags": [
            "Hotel"
          ],
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "hotelId",
              "in": "path",
              "description": "ID of the hotel to give feedback for",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HotelFeedback"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Feedback given successfully"
            }
          }
        }
      },
      "/hotels/{hotelId}/feedbacks": {
        "get": {
          "summary": "Get all feedbacks for a hotel",
          "tags": [
            "Hotel"
          ],
          "parameters": [
            {
              "name": "hotelId",
              "in": "path",
              "description": "ID of the hotel to get feedbacks for",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successfully retrieved feedbacks"
            }
          }
        }
      },
      "/hotels/searchByCategory": {
        "get": {
          "summary": "Search hotels by category",
          "tags": [
            "Hotel"
          ],
          "parameters": [
            {
              "name": "location",
              "in": "query",
              "description": "Location to search hotels in",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "roomType",
              "in": "query",
              "description": "Type of room to search",
              "required": false,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successfully retrieved hotels"
            }
          }
        }
      },
      "/hotels/{hotelId}/booking": {
        "post": {
          "summary": "Make a hotel booking",
          "tags": ["Booking"],
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "hotelId",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HotelBooking"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Hotel booking created successfully"
            }
          }
        },
        "delete": {
          "summary": "Cancel a hotel booking",
          "tags": ["Booking"],
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "hotelId",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BookingCancellation"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Hotel booking canceled successfully"
            }
          }
        }
      },
      "/hotel/{hotelId}/booking": {
        "get": {
          "summary": "Get all bookings for a hotel",
          "tags": ["Booking"],
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "hotelId",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successfully retrieved hotel bookings"
            }
          }
        }
      },
      "/pay": {
        "post": {
          "summary": "Make a payment",
          "tags": ["Booking"],
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Payment"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Payment made successfully"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "UserRegistration": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "password": {
              "type": "string",
              "format": "password"
            }
          }
        },
        "VerifyEmail": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "verificationCode": {
              "type": "string"
            }
          }
        },
        "UserLogin": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "password": {
              "type": "string",
              "format": "password"
            }
          }
        },
        "NewHotel": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "location": {
              "type": "string"
            },
            "category": {
              "type": "string"
            },
            "description": {
              "type": "string"
            }
          }
        },
        "UpdateHotel": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "location": {
              "type": "string"
            },
            "category": {
              "type": "string"
            },
            "description": {
              "type": "string"
            }
          }
        },
        "HotelFeedback": {
          "type": "object",
          "properties": {
            "rating": {
              "type": "number",
              "minimum": 1,
              "maximum": 5
            },
            "comment": {
              "type": "string"
            }
          }
        }
      },
      "HotelBooking": {
        "type": "object",
        "properties": {
          "checkInDate": {
            "type": "string",
            "format": "date"
          },
          "checkOutDate": {
            "type": "string",
            "format": "date"
          },
          "guests": {
            "type": "integer"
          }
        },
        "required": ["checkInDate", "checkOutDate", "guests"]
      },
      "BookingCancellation": {
        "type": "object",
        "properties": {
          "bookingId": {
            "type": "string"
          }
        },
        "required": ["bookingId"]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
}

  